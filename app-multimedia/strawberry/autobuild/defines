             -DENABLE_LIBGPOD=ON \
             -DENABLE_LIBMTP=ON \
             -DENABLE_LIBPULSE=ON \
             -DENABLE_MOODBAR=ON \
             -DENABLE_MUSICBRAINZ=ON \
             -DENABLE_QOBUZ=ON \
             -DENABLE_SONGFINGERPRINTING=ON \
             -DENABLE_SUBSONIC=ON \
