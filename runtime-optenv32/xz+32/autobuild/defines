PKGNAME=xz+32
PKGDES="General-purpose data compression software with a high compression ratio (32-bit x86 runtime)"
PKGDEP="glibc+32"
BUILDDEP="devel-base+32 po4a"
PKGSEC=utils

AUTOTOOLS_AFTER=(
	"--disable-debug"
	"--disable-external-sha256"
	"--enable-microlzma"
	"--enable-lzip-decoder"
	"--enable-assembler"
	"--enable-clmul-crc"
	"--disable-small"
	"--enable-threads=yes"
	"--enable-xz"
	"--enable-xzdec"
	"--enable-lzmadec"
	"--enable-lzmainfo"
	"--enable-lzma-links"
	"--enable-scripts"
	"--disable-doc"
	"--disable-sandbox"
	"--enable-symbol-versions"
	"--enable-nls"
	"--disable-rpath"
	"--enable-largefile"
	"--enable-unaligned-access=auto"
	"--disable-unsafe-type-punning"
	"--disable-werror"
)
MAKE_AFTER="pkgconfigdir=/usr/lib/pkgconfig"

AB_FLAGS_O3=1
ABHOST=optenv32
