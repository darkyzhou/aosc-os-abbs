PKGNAME=libdrm
PKGDES="Direct Rendering Manager runtime library"
PKGDEP="x11-lib"
PKGSEC=libs

MESON_AFTER="-Dudev=true \
             -Dintel=enabled \
             -Dvalgrind=disabled"
MESON_AFTER__LOONGARCH64=" \
             ${MESON_AFTER} \
             -Dgsgpu=enabled"
MESON_AFTER__ARM=" \
             ${MESON_AFTER} \
             -Domap=enabled \
             -Dexynos=enabled \
             -Dfreedreno=enabled \
             -Dtegra=enabled \
             -Dvc4=enabled \
             -Detnaviv=enabled"
MESON_AFTER__ARM64="${MESON_AFTER__ARM}"
MESON_AFTER__ARMV4="${MESON_AFTER__ARM}"
MESON_AFTER__ARMV6HF="${MESON_AFTER__ARM}"
MESON_AFTER__ARMV7HF="${MESON_AFTER__ARM}"
