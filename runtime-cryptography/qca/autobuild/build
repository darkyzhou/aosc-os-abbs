abinfo "Building qca_qt5 ..."
CMAKE_AFTER=(
    '-DQT6=OFF'
    '-DQCA_INSTALL_IN_QT_PREFIX=ON'
    '-DQCA_MAN_INSTALL_DIR=/usr/share/man'
)
build_cmakeninja_configure
build_cmakeninja_build
build_cmakeninja_install

abinfo "Cleaning up ..."
rm -rv "$BLDDIR"

abinfo "Building qca_qt6 ..."
CMAKE_AFTER=(
    '-DQT6=ON'
    '-DQCA_INSTALL_IN_QT_PREFIX=ON'
    '-DQCA_MAN_INSTALL_DIR=/usr/share/man'
)
build_cmakeninja_configure
build_cmakeninja_build
build_cmakeninja_install
