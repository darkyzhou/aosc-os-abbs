PKGNAME=kdev-php
PKGSEC=kde
PKGDEP="kcmutils kdevelop ki18n ktexteditor threadweaver php"
BUILDDEP="extra-cmake-modules"
PKGDES="PHP language support for KDevelop"

CMAKE_AFTER="-DBUILD_COVERAGE=OFF \
             -DBUILD_TESTING=OFF \
             -DENABLE_BSYMBOLICFUNCTIONS=OFF \
             -DKDE_INSTALL_PREFIX_SCRIPT=OFF \
             -DKDE_INSTALL_USE_QT_SYS_PATHS=ON"

# FIXME: Documentation of kdevelop depends on Qt6WebEngine
# which does not support secondary architectures
FAIL_ARCH="!(amd64|arm64|loongarch64)"
