PKGNAME=kongress
PKGSEC=kde
PKGDEP="kcalendarcore kconfig kcoreaddons kdbusaddons ki18n kirigami \
        kirigami-addons knotifications kosmindoormap"
BUILDDEP="extra-cmake-modules"
