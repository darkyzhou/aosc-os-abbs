PKGNAME=kpimtextedit
PKGSEC=kde
PKGDEP="kauth kcodecs kcompletion kconfigwidgets kcoreaddons kdesignerplugin \
        ki18n kiconthemes kio kitemviews kservice ktextwidgets kwidgetsaddons \
        ktextaddons kxmlgui solid sonnet syntax-highlighting"
BUILDDEP="doxygen extra-cmake-modules kdoctools"
PKGDES="Text editing widgets for PIM-specific functions"

# Note:
#
# -DUSE_UNITY_CMAKE_SUPPORT "Use UNITY cmake support (speedup compile time)."
# Upstream defaults to "OFF."
CMAKE_AFTER="-DBUILD_COVERAGE=OFF \
             -DBUILD_DESIGNERPLUGIN=ON \
             -DBUILD_QCH=ON \
             -DBUILD_TESTING=OFF \
             -DENABLE_BSYMBOLICFUNCTIONS=OFF \
             -DKDE_INSTALL_PREFIX_SCRIPT=OFF \
             -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
             -DKDE_L10N_AUTO_TRANSLATIONS=OFF \
             -DKDE_L10N_SYNC_TRANSLATIONS=OFF \
             -DUSE_UNITY_CMAKE_SUPPORT=OFF"

PKGREP="kde-l10n<=16.12.3"
PKGBREAK="kde-l10n<=16.12.3"
