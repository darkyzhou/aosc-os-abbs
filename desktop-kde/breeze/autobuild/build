abinfo "Building breeze_qt5 ..."
CMAKE_AFTER=(
    '-DBUILD_COVERAGE=OFF'
    '-DBUILD_TESTING=OFF'
    '-DBUILD_QT5=OFF'
    '-DENABLE_BSYMBOLICFUNCTIONS=OFF'
    '-DKDE_INSTALL_PREFIX_SCRIPT=OFF'
    '-DKDE_INSTALL_USE_QT_SYS_PATHS=ON'
    '-DWITH_DECORATIONS=ON'
    '-DWITH_WALLPAPERS=ON'
)
build_cmakeninja_configure
build_cmakeninja_build
build_cmakeninja_install

abinfo "Cleaning up ..."
rm -rv "$BLDDIR"

abinfo "Building breeze_qt6 ..."
CMAKE_AFTER=(
    '-DBUILD_COVERAGE=OFF'
    '-DBUILD_TESTING=OFF'
    '-DBUILD_QT5=ON'
    '-DENABLE_BSYMBOLICFUNCTIONS=OFF'
    '-DKDE_INSTALL_PREFIX_SCRIPT=OFF'
    '-DKDE_INSTALL_USE_QT_SYS_PATHS=ON'
    '-DWITH_DECORATIONS=ON'
    '-DWITH_WALLPAPERS=ON'
)
build_cmakeninja_configure
build_cmakeninja_build
build_cmakeninja_install
