PKGDEP="kauth kcodecs kcompletion kconfigwidgets kcoreaddons kguiaddons ki18n \
        kio kitemviews kjobwidgets ksanecore ktextwidgets kwidgetsaddons \
        kxmlgui libkexiv2 libksane solid sonnet"
