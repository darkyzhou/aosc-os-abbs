PKGNAME=kdev-python
PKGSEC=kde
PKGDEP="kdevelop ki18n ktexteditor threadweaver python-3"
BUILDDEP="extra-cmake-modules"
PKGDES="Python language support for KDevelop"

CMAKE_AFTER="-DBUILD_COVERAGE=OFF \
             -DBUILD_TESTING=OFF \
             -DENABLE_BSYMBOLICFUNCTIONS=OFF \
             -DKDE_INSTALL_PREFIX_SCRIPT=OFF \
             -DKDE_INSTALL_USE_QT_SYS_PATHS=ON"

# FIXME: Documentation of kdevelop depends on QtWebEngine
# which does not support secondary architectures
FAIL_ARCH="!(amd64|arm64|loongarch64)"
