PKGNAME=skanpage
PKGSEC=kde
PKGDEP="kconfig kcoreaddons kcrash ki18n kirigami2 kquickimageeditor \
        ksanecore leptonica purpose tesseract"
BUILDDEP="extra-cmake-modules"
PKGDES="A muilti-page scanning application for KDE"

CMAKE_AFTER="-DBUILD_COVERAGE=OFF \
             -DBUILD_TESTING=OFF \
             -DENABLE_BSYMBOLICFUNCTIONS=OFF \
             -DKDE_INSTALL_PREFIX_SCRIPT=OFF \
             -DKDE_INSTALL_USE_QT_SYS_PATHS=ON"

# FIXME: This package depends on Qt6Pdf from QtWebEngine
# which does not support secondary architectures
FAIL_ARCH="!(amd64|arm64|loongarch64)"
