PKGNAME=akonadi-calendar
PKGSEC=kde
PKGDEP="akonadi-contacts kauth kcalendarcore kcalutils kcodecs kcontacts \
        kcoreaddons kdbusaddons ki18n kidentitymanagement kitemmodels \
        kjobwidgets kmailtransport kmime knotifications kpimtextedit kservice \
        ktextwidgets kwallet messagelib solid sonnet"
BUILDDEP="extra-cmake-modules kaccounts-integration kdoctools"
PKGDES="Akonadi calendar integration"

# Note:
#
# -DUSE_UNITY_CMAKE_SUPPORT "Use UNITY cmake support (speedup compile time)."
# Upstream defaults to "OFF."
CMAKE_AFTER="-DBUILD_COVERAGE=OFF \
             -DBUILD_TESTING=OFF \
             -DENABLE_BSYMBOLICFUNCTIONS=OFF \
             -DKDE_INSTALL_PREFIX_SCRIPT=OFF \
             -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
             -DUSE_UNITY_CMAKE_SUPPORT=OFF"

PKGREP="kde-l10n<=16.12.3"
PKGBREAK="kde-l10n<=16.12.3"

# FIXME: Qt6WebEngine is only available for these architectures.
FAIL_ARCH="!(amd64|arm64|loongarch64)"
