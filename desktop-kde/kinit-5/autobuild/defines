             -DBUILD_QCH=ON \
             -DBUILD_TESTING=OFF \
             -DBUILD_WITH_QT6=OFF \
             -DKDE_INSTALL_PREFIX_SCRIPT=OFF \
             -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
             -DKDE_L10N_AUTO_TRANSLATIONS=OFF \
             -DKDE_L10N_SYNC_TRANSLATIONS=OFF \
             -DWITH_X11=ON"

PKGBREAK="kinit<=5.115.0"
