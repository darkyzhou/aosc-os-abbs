PKGNAME=kde-dev-utils
PKGSEC=kde
PKGDEP="fontconfig freetype kauth kbookmarks kcodecs kcompletion \
        kconfigwidgets kcoreaddons ki18n kitemviews kjobwidgets kparts \
        kservice ktextwidgets kwidgetsaddons kxmlgui solid sonnet"
BUILDDEP="extra-cmake-modules"
PKGDES="Small utilities for developers using KDE frameworks and Qt libraries"

CMAKE_AFTER="-DBUILD_COVERAGE=OFF \
             -DBUILD_TESTING=OFF \
             -DENABLE_BSYMBOLICFUNCTIONS=OFF \
             -DKDE_INSTALL_PREFIX_SCRIPT=OFF \
             -DKDE_INSTALL_USE_QT_SYS_PATHS=ON"

PKGREP="kde-l10n<=16.12.3"
PKGBREAK="kde-l10n<=16.12.3"
