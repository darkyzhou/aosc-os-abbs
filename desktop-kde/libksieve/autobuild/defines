PKGDEP="attica karchive kauth kcodecs kcompletion kconfigwidgets kcoreaddons \
        ki18n kimap kiconthemes kidentitymanagement kio kitemviews \
        kjobwidgets kmailtransport kmime knewstuff kpimtextedit kservice \
        ktextwidgets kwallet kwidgetsaddons kxmlgui libkdepim pimcommon solid \
        sonnet syntax-highlighting"
BUILDDEP="doxygen extra-cmake-modules kdoctools"
