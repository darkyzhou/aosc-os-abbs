PKGNAME=libgravatar
PKGSEC=kde
PKGDEP="kauth kcodecs kcompletion kconfigwidgets kcoreaddons ki18n kio \
        kitemviews kjobwidgets kpimtextedit kservice ktextwidgets \
        kwidgetsaddons kxmlgui pimcommon solid sonnet"
BUILDDEP="doxygen extra-cmake-modules kdoctools"
PKGDES="KDE PIM library to provide Gravatar support"

# Note:
#
# -DUSE_UNITY_CMAKE_SUPPORT "Use UNITY cmake support (speedup compile time)."
# Upstream defaults to "OFF."
CMAKE_AFTER="-DBUILD_COVERAGE=OFF \
             -DBUILD_QCH=ON \
             -DBUILD_TESTING=OFF \
             -DENABLE_BSYMBOLICFUNCTIONS=OFF \
             -DKDE_INSTALL_PREFIX_SCRIPT=OFF \
             -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
             -DUSE_UNITY_CMAKE_SUPPORT=OFF"

PKGBREAK="kdepim<=15.12.1-2 kde-l10n<=16.12.3"
PKGREP="kdepim<=15.12.1-2 kde-l10n<=16.12.3"
