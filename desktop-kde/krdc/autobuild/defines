PKGNAME=krdc
PKGSEC=kde
PKGDEP="fontconfig freerdp-2 freetype kauth kbookmarks kcmutils kcodecs \
        kcompletion kcoreaddons kdnssd ki18n kiconthemes knotifications \
        knotifyconfig kservice kstatusnotifieritem kwallet kwidgetsaddons \
        kwindowsystem kxmlgui libssh libvncserver plasma-activities"
BUILDDEP="extra-cmake-modules kdoctools"
PKGDES="A remote desktop (RDP/VNC) client for KDE"

CMAKE_AFTER="-DBUILD_COVERAGE=OFF \
             -DBUILD_TESTING=OFF \
             -DENABLE_BSYMBOLICFUNCTIONS=OFF \
             -DKDE_INSTALL_PREFIX_SCRIPT=OFF \
             -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
             -DWITH_RDP=ON \
             -DWITH_VNC=ON"

PKGREP="kde-l10n<=16.12.3"
PKGBREAK="kde-l10n<=16.12.3"
