PKGNAME=kdialog
PKGSEC=kde
PKGDEP="kauth kcodecs kcoreaddons kdbusaddons kguiaddons ki18n kiconthemes \
        kio kjobwidgets knotifications kservice ktextwidgets solid sonnet"
