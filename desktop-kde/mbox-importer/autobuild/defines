PKGNAME=mbox-importer
PKGSEC=kde
PKGDEP="akonadi-contacts gpgme karchive kauth kcodecs kcompletion \
        kconfigwidgets kcontacts kcoreaddons kcrash ki18n kidentitymanagement \
        kimap kitemmodels kitemviews kjobwidgets kmime kpimtextedit kservice \
        ktextwidgets kwidgetsaddons kxmlgui mailcommon mailimporter \
        messagelib pimcommon solid sonnet"
BUILDDEP="extra-cmake-modules kdoctools"
PKGDES="A helper application for importing .mbox files to KMail"

# Note:
#
# -DUSE_UNITY_CMAKE_SUPPORT "Use UNITY cmake support (speedup compile time)."
# Upstream defaults to "OFF."
CMAKE_AFTER="-DBUILD_COVERAGE=OFF \
             -DBUILD_TESTING=OFF \
             -DENABLE_BSYMBOLICFUNCTIONS=OFF \
             -DKDE_INSTALL_PREFIX_SCRIPT=OFF \
             -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
             -DUSE_UNITY_CMAKE_SUPPORT=OFF"

PKGREP="kdepim<=16.11.90 kde-l10n<=16.12.3"
PKGBREAK="kdepim<=16.11.90 kde-l10n<=16.12.3"

# FIXME: Qt6WebEngine is only available for these architectures.
FAIL_ARCH="!(amd64|arm64|loongarch64)"
