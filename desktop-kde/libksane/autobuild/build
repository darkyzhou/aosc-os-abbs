abinfo "Building libksane_qt5 ..."
CMAKE_AFTER=(
    '-DBUILD_COVERAGE=OFF'
    '-DBUILD_TESTING=OFF'
    '-DQT_MAJOR_VERSION=5'
    '-DCOMPILE_VIEWER_TESTAPP=OFF'
    '-DENABLE_BSYMBOLICFUNCTIONS=OFF'
    '-DKDE_INSTALL_PREFIX_SCRIPT=OFF'
    '-DKDE_INSTALL_USE_QT_SYS_PATHS=ON'
)
build_cmakeninja_configure
build_cmakeninja_build
build_cmakeninja_install

abinfo "Cleaning up ..."
rm -rv "$BLDDIR"

abinfo "Building libksane_qt6 ..."
CMAKE_AFTER=(
    '-DBUILD_COVERAGE=OFF'
    '-DBUILD_TESTING=OFF'
    '-DQT_MAJOR_VERSION=6'
    '-DCOMPILE_VIEWER_TESTAPP=OFF'
    '-DENABLE_BSYMBOLICFUNCTIONS=OFF'
    '-DKDE_INSTALL_PREFIX_SCRIPT=OFF'
    '-DKDE_INSTALL_USE_QT_SYS_PATHS=ON'
)
build_cmakeninja_configure
build_cmakeninja_build
build_cmakeninja_install
