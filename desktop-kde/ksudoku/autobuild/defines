PKGNAME=ksudoku
PKGSEC=kde
PKGDEP="fontconfig freetype karchive kauth kcodecs kcompletion kconfigwidgets \
        kcoreaddons kcrash kdbusaddons kguiaddons ki18n kio kitemviews \
        kjobwidgets kservice kwidgetsaddons kxmlgui libkdegames solid"
BUILDDEP="extra-cmake-modules kdoctools"
PKGDES="A Sudoku game for KDE"

CMAKE_AFTER="-DBUILD_COVERAGE=OFF \
             -DBUILD_TESTING=OFF \
             -DENABLE_BSYMBOLICFUNCTIONS=OFF \
             -DKDE_INSTALL_PREFIX_SCRIPT=OFF \
             -DKDE_INSTALL_USE_QT_SYS_PATHS=ON"

PKGREP="kde-l10n<=16.12.3"
PKGBREAK="kde-l10n<=16.12.3"
