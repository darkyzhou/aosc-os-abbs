abinfo "Building polkit-qt-1_qt5 ..."
CMAKE_AFTER=(
     '-DQT_MAJOR_VERSION=5'
)
build_cmakeninja_configure
build_cmakeninja_build
build_cmakeninja_install

abinfo "Cleaning up ..."
rm -rv "$BLDDIR"

abinfo "Building polkit-qt-1_qt6 ..."
CMAKE_AFTER=(
    '-DQT_MAJOR_VERSION=6'
)
build_cmakeninja_configure
build_cmakeninja_build
build_cmakeninja_install
